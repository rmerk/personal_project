extends layout

block content
   h2.text-center Login
   div.formContainer
      form(method="POST" action="/")
         md-input-container
            label(for="username").
               Username:
            input(type="text" name="username" id="username")
         md-input-container
            label(for="password").
               Password:
            input(type="password" name="password" id="password")
         md-button.md-raised(type="submit").
            Login
